<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="35dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.9"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:src="@drawable/avatar"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Welcome back,"
                                android:textSize="17dp"
                                android:fontFamily="@font/soinsansneu_roman"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Julie Bell"
                                android:textSize="24dp"
                                android:fontFamily="@font/soinsansneue_heavy"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_baseline_notifications_none_24"/>

                    </LinearLayout>



                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="36dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="28dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/soinsansneue_black"
                                android:text="$12,095"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Overdue"
                                android:textSize="17dp"
                                android:fontFamily="@font/soinsansneue_medium"
                                android:textColor="@color/grey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="28dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:fontFamily="@font/soinsansneue_black"
                                android:text="$33,363"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Outstanding"
                                android:textSize="17dp"
                                android:fontFamily="@font/soinsansneue_medium"
                                android:textColor="@color/grey"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:text="Outstanding revenue"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/soinsansneue_medium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal"
                        android:gravity="left">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_marginRight="6dp"
                                android:layout_weight="0.9"
                                android:progress="40"
                                android:scaleY="4"
                                app:trackCornerRadius="10dp"
                                app:trackThickness="10dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_weight="0.05"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:text="$21.3k"
                                android:textSize="23dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/soinsansneue_black"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="$12,095 overdue"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/soinsansneue_medium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="21dp"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Total profit"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:fontFamily="@font/soinsansneue_heavy"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sep 2020"
                            android:textColor="@color/grey"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:fontFamily="@font/soinsansneue_medium"/>
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_baseline_tune_24"
                            app:tint="@color/black">

                        </ImageView>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:src="@drawable/graphic"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:src="@drawable/graphic"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:src="@drawable/graphic"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:src="@drawable/graphic"
                        />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>